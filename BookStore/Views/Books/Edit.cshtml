@model BookStore.Models.Book

@{
    ViewData["Title"] = "Edit";
}

<h1>Create</h1>
@using (Html.BeginForm("Save", "Books", FormMethod.Post))
{
    <div>
        <h4>Book</h4>
        <hr />
        <dl class="row">
            <dt class="col-sm-2">
                @Html.LabelFor(model => model.Title)
            </dt>
            <dd class="col-sm-10">
                @Html.TextBoxFor(model => model.Title, new { @class = "form-control" })
                @Html.ValidationMessageFor(x => x.Title, null, new { @class = "label label-danger" })
            </dd>
            <dt class="col-sm-2">
                @Html.LabelFor(model => model.Genre)
            </dt>
            <dd class="col-sm-10">
                @Html.TextBoxFor(model => model.Genre, new { @class = "form-control" })
                @Html.ValidationMessageFor(x => x.Genre, null, new { @class = "label label-danger" })
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Price)
            </dt>
            <dd class="col-sm-10">
                @Html.TextBoxFor(model => model.Price, new { @class = "form-control" })
                @Html.ValidationMessageFor(x => x.Price, null, new { @class = "label label-danger" })
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.PublishDate)
            </dt>
            <dd class="col-sm-10">
                @Html.TextBoxFor(model => model.PublishDate, new { @class = "form-control" })
                @Html.ValidationMessageFor(x => x.PublishDate, null, new { @class = "label label-danger" })
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Authors)
            </dt>
            <dd class="col-sm-10">
                @Html.TextBoxFor(model => model.Authors, new { @class = "form-control" })
                @Html.ValidationMessageFor(x => x.Authors, null, new { @class = "label label-danger" })
            </dd>
        </dl>
    </div>
    <hr />
    <div>
        <div class="text-right">
            <button class="btn btn-primary" asp-action="Save" asp-controller="Books">Save</button>
            <a class="btn btn-danger" asp-action="Index">Back to List</a>
        </div>
    </div>
}
