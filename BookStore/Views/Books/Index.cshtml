@model Book
@{
    List<Book> libros = ViewBag.Lista;
    ViewData["Title"] = "List of books";
}

<h2>This is the book index generated by the view.</h2>
<a class="btn btn-primary pull-right" href="~/books/create">Add book</a>
<br/>

<table class="table table-striped table-bordered">
    <thead>
    <tr>
        <th>@Html.LabelFor(x => x.Title)</th>
        <th>@Html.LabelFor(x => x.Genre)</th>
        <th>@Html.LabelFor(x => x.Price)</th>
        <th>@Html.LabelFor(x => x.PublishDate)</th>
        <th>@Html.LabelFor(x => x.Authors)</th>
    </tr>
    </thead>
    <tbody>
    @foreach (var item in libros)
    {
        <tr>
            <td><a href="~/books/details/@item.Id">@item.Title</a></td>
            <td>@item.Genre</td>
            <td>@item.Price</td>
            <td>@item.PublishDate</td>
            <td>@item.Authors</td>
        </tr>
    }

    </tbody>
</table>